<?xml version="1.0"?>
<tool_dependency>
    <package name="soapdenovo2" version="0.19">
        <install version="1.0">
            <actions>
                <action type="shell_command"><![CDATA[
                    git clone https://github.com/aquaskyline/SOAPdenovo2.git
                ]]></action>
                <action type="shell_command"><![CDATA[
                    make
                ]]></action>
                <action type="move_directory_files">
                    <source_directory>SOAPdenovo-127mer</source_directory>
                    <destination_directory>$INSTALL_DIR/</destination_directory>
                </action>
                <action type="move_directory_files">
                    <source_directory>SOAPdenovo-63mer</source_directory>
                    <destination_directory>$INSTALL_DIR/</destination_directory>
                </action>
                <action type="set_environment">
                    <environment_variable name="SOAPDENOVO_DIR" action="set_to">$INSTALL_DIR/</environment_variable>
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/</environment_variable>
                </action>
            </actions>
        </install>
        <readme></readme>
    </package>
</tool_dependency>